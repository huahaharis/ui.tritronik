{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",

    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true,

    "moduleResolution": "Bundler",
    "esModuleInterop": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
