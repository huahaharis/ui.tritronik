{
  "name": "@tritronik/ui",
  "version": "0.1.0",
  "description": "Reusable React UI components built with Radix UI and Tailwind CSS",
  "license": "MIT",
  "author": "Tritronik",
  "repository": {
    "type": "git",
    "url": "https://github.com/tritronik/ui"
  },
  "homepage": "https://github.com/tritronik/ui",
  "bugs": {
    "url": "https://github.com/tritronik/ui/issues"
  },

  "type": "module",

  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },

  "files": [
    "dist"
  ],

  "scripts": {
    "build": "tsup"
  },

  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "class-variance-authority": "^0.7.0",
    "lucide-react": "^0.300.0"
  },

  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.0"
  },

  "publishConfig": {
    "access": "public"
  }
}
